import java.awt.*;

public class Blood {
	private int x, y, w, h;
	private TankClient tc;
	
	//出现的位置规律
	private int[][] pos = {{200, 200}, {250, 250}, {300, 300}, {350, 350}, {400, 400}};
	private int taep = 0;//出现了几次
	
	public Blood() {
		x = pos[taep][0];
		y = pos[taep][1];
		w = h = 15;
	}
	
	public void draw(Graphics g) {
		Color c = g.getColor();
		g.setColor(Color.MAGENTA);
		g.fillRect(x, y, w, h);
		g.setColor(c);
		
		taep ++;
	}
}
