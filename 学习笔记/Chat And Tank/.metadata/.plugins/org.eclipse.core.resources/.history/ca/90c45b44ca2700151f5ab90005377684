import java.awt.*;
import java.awt.event.*;
import java.util.*;

public class Tank {	
	public static final int XSPEED = 5;//x的速度
	public static final int YSPEED = 5;//y的速度
	
	public static final int WIDTH = 30;//坦克的宽度
	public static final int HEIGHT = 30;//坦克的高度
	
	private boolean live = true;//控制坦克生死的量
	
	TankClient tc;
	
	boolean good;//区分坦克是敌是友的量
		
	int x,y;//坦克的位置坐标，改变坐标后重画窗口来实现圆动起来的效果
	
	private static Random r = new Random();//随机数产生器
		
	private boolean bL=false, bU=false, bR=false, bD = false;//记录四个方向键的状态
	
	Dir dir = Dir.STOP;//代表实际方向，刚开始不移动
	private Dir ptDir = Dir.D;//炮筒方向
	
	private int step = r.nextInt(12) + 3;//最少移动三步	
	
	int id;//服务端分配的独一无二的id
		
	public Tank(int x, int y, boolean good) {
		this.x = x;
		this.y = y;
		this.good =good;
	}
	
	public Tank(int x, int y, boolean good,  Dir dir, TankClient tc) {
		this(x, y,good);
		this.dir = dir;
		this.tc = tc;
		
	}
	
	//画坦克的方法
	public void draw(Graphics g) {
		//如果坦克没活着
		if(!live) {
			//如果时敌人坦克
			if(!good) {
				tc.tanks.remove(this);
			}			
			return;
		}
		
		Color c = g.getColor();
		
		//判断是敌人的坦克还是自己的坦克
		if(good) g.setColor(Color.RED);
		else g.setColor(Color.BLUE);
		
		g.fillOval(x, y, WIDTH, HEIGHT);
		g.drawString("id:"+id, x, y-10);
		g.setColor(c);
		
		//根据炮筒方向画出炮筒
		switch(ptDir) {
		case L:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x, y + Tank.HEIGHT/2);
			break;
		case LU:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x, y);
			break;
		case U:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x + Tank.WIDTH/2, y);
			break;
		case RU:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x + Tank.WIDTH, y);
			break;
		case R:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x + Tank.WIDTH, y + Tank.HEIGHT/2);
			break;
		case RD:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x + Tank.WIDTH, y + Tank.HEIGHT);
			break;
		case D:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x + Tank.WIDTH/2, y + Tank.HEIGHT);
			break;
		case LD:
			g.drawLine(x + Tank.WIDTH/2, y + Tank.HEIGHT/2, x, y + Tank.HEIGHT);
			break;
		}
		
		move();
	}
	
	//移动，根据dir方向来移动
	void move() {
		switch(dir) {
		case L:
			x -= XSPEED;
			break;
		case LU:
			x -= XSPEED;
			y -= YSPEED;
			break;
		case U:
			y -= YSPEED;
			break;
		case RU:
			x += XSPEED;
			y -= YSPEED;
			break;
		case R:
			x += XSPEED;
			break;
		case RD:
			x += XSPEED;
			y += YSPEED;
			break;
		case D:
			y += YSPEED;
			break;
		case LD:
			x -= XSPEED;
			y += YSPEED;
			break;
		case STOP:
			break;
		}
		
		if(this.dir != Dir.STOP) {
			this.ptDir = this.dir;
		}
		
		//不让坦克我出界
		if(x<0) x = 0;
		if(y<30) y = 30;
		if(x+Tank.WIDTH > TankClient.GAME_WIDTH) x = TankClient.GAME_WIDTH - Tank.WIDTH;
		if(y+Tank.HEIGHT > TankClient.GAME_HEIGHT) y = TankClient.GAME_HEIGHT - Tank.HEIGHT;
	
		if(!good) {
			Dir[] dirs = Dir.values();//让方向变成数组
			if(step == 0) {//只要固定一个方向的步数走完才换方向
				step = r.nextInt(12) + 3;
				int rn = r.nextInt(dirs.length);//产生一个从0到dir长度的数组
				dir = dirs[rn];
			}			
			step --;
			
			if(r.nextInt(40) > 38) this.fire();
		}
	}
	
	//四个方向键按下时的状态
	public void keyPressed(KeyEvent e) {
		int key = e.getKeyCode();
		switch(key) {
		case KeyEvent.VK_LEFT :
			bL = true;
			break;
		case KeyEvent.VK_UP :
			bU = true;
			break;
		case KeyEvent.VK_RIGHT :
			bR = true;
			break;
		case KeyEvent.VK_DOWN :
			bD = true;
			break;
		}
			
		locateDirection();
	}
	
	

	

	//根据方向键的状态改变dir方向
	void locateDirection() {
		Dir oldDir = this.dir;
		
		if(bL && !bU && !bR && !bD) dir = Dir.L;
		else if(bL && bU && !bR && !bD) dir = Dir.LU;
		else if(!bL && bU && !bR && !bD) dir = Dir.U;
		else if(!bL && bU && bR && !bD) dir = Dir.RU;
		else if(!bL && !bU && bR && !bD) dir = Dir.R;
		else if(!bL && !bU && bR && bD) dir = Dir.RD;
		else if(!bL && !bU && !bR && bD) dir = Dir.D;
		else if(bL && !bU && !bR && bD) dir = Dir.LD;
		else if(!bL && !bU && !bR && !bD) dir = Dir.STOP;
		
		if(dir != oldDir) {
			TankMoveMsg msg = new TankMoveMsg(id, x, y, dir);
			tc.nc.send(msg);
		}
	}

	//四个方向键释放时的状态
	public void KeyReleased(KeyEvent e) {
		int key = e.getKeyCode();
		switch(key) {
		case KeyEvent.VK_CONTROL :
			fire();
			break;
		case KeyEvent.VK_LEFT :
			bL = false;
			break;
		case KeyEvent.VK_UP :
			bU = false;
			break;
		case KeyEvent.VK_RIGHT :
			bR = false;
			break;
		case KeyEvent.VK_DOWN :
			bD = false;
			break;
		}
		
		locateDirection();
		
	}
	
	//开火
	public Missile fire() {
		if(!live) return null;
		int x = this.x + Tank.WIDTH/2 - Missile.WIDTH/2;
		int y = this.y + Tank.HEIGHT/2 - Missile.HEIGHT/2;
		Missile m = new Missile(id, x, y, good, ptDir, this.tc);//根据炮筒的方向开火
		tc.missiles.add(m);
		
		MissileNewMsg msg = new MissileNewMsg(m);
		
		return m;
	}
	
	//拿到坦克所在的区域
	public Rectangle getRect() {
		return new Rectangle(x, y, WIDTH, HEIGHT);
	}
	
	public boolean isLive() {
		return live;
	}

	public void setLive(boolean live) {
		this.live = live;
	}
	
	public boolean isGood() {
		return good;
	}
}
