<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<ImageView 
	    android:id="@+id/image_center"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_centerInParent="true"
	    android:src="@drawable/relative_center"/>
	<ImageView 
	    android:id="@+id/image_left"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toLeftOf="@id/image_center"
	    android:layout_alignTop="@id/image_center"
	    android:layout_alignBottom="@id/image_center"
	    android:src="@drawable/relative_left"/>
	<ImageView 
	    android:id="@+id/image_right"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/image_center"
	    android:layout_alignTop="@id/image_center"
	    android:layout_alignBottom="@id/image_center"
	    android:src="@drawable/relative_right"/>
	<ImageView 
	    android:id="@+id/image_top"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_above="@id/image_center"
	    android:layout_alignLeft="@id/image_center"
	    android:layout_alignRight="@id/image_center"
	    android:src="@drawable/relative_top"/>
	<ImageView 
	    android:id="@+id/image_below"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_below="@id/image_center"
	    android:layout_alignLeft="@id/image_center"
	    android:layout_alignRight="@id/image_center"
	    android:src="@drawable/relative_below"/>
	<ImageView 
	    android:id="@+id/image_leftandtop"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toLeftOf="@id/image_center"
	    android:layout_above="@id/image_center"
	    android:src="@drawable/relative_leftandtop"/>
	<ImageView 
	    android:id="@+id/image_leftandbelow"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toLeftOf="@id/image_center"
	    android:layout_below="@id/image_center"
	    android:src="@drawable/relative_leftandbelow"/>
	<ImageView 
	    android:id="@+id/image_rightandbelow"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/image_center"
	    android:layout_below="@id/image_center"
	    android:src="@drawable/relative_rightandbelow"/>
	<ImageView 
	    android:id="@+id/image_rightandtop"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:layout_toRightOf="@id/image_center"
	    android:layout_above="@id/image_center"
	    android:src="@drawable/relative_rightandtop"/>
	
</RelativeLayout>